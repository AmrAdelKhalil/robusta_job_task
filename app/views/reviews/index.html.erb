<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.description %></td>
        <td><%= link_to 'Show', movie_reviews_path %></td>
        <% if current_user.id == review.user_id %>
          <td><%= link_to 'Edit', edit_movie_review_path(review.movie.id,review.id) %></td>
          <td><%= link_to 'Destroy', movie_reviews_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_movie_review_path %>

<div class="container">
  <legend>Create review for <strong><%= @review.movie.name.capitalize %></strong> movie</legend>
  <%= form_for @review, url: {action: "create"} do |f|  %>
    <div class="form-group">
      <%= f.label :description%>
      <%= f.text_field :description, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :rate %>
      <%= f.select :rate, options_for_select(1..5), {}, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.submit "Create", class: "btn btn-primary"%>
        <%= link_to 'Cancel', @review.movie, class: "btn btn-danger" %>
    </div>
  <%end%>
</div>
